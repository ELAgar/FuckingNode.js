<%- include layouts/header.ejs %>

<div class="container">
	<form method="POST" class="form-group" action="/create_user">
		<div class="form-group">
			<input 
				type="text" 
				class="form-control" 
				name="name" 
				placeholder="Введите имя"
			>
		</div>
		<div class="form-group">
			<input 
				type="text" 
				name="surname" 
				class="form-control" 
				placeholder="Введите фамилию"
			>
		</div>
		<div class="form-group">
			<input 
				type="text" 
				name="age" 
				class="form-control" 
				placeholder="Введите возраст"
		>
		</div>
		<div class="form-group">
			<input 
				type="text" 
				name="location" 
				class="form-control" 
				placeholder="Введите местоположение"
		>
		</div>
		<div class="form-group">
			<input 
				type="text" 
				name="height" 
				class="form-control" 
				placeholder="Введите рост"
		>
		</div>
		<div class="form-group">
			<input 
				type="text" 
				name="weight" 
				class="form-control" 
				placeholder="Введите вес"
		>
		</div>
		<div class="form-group">
			<input 
				type="submit"
				class="btn btn-success form-control" 
				value="Создать"
			>
		</div>
	</form>
</div>

<%- include layouts/footer.ejs %>